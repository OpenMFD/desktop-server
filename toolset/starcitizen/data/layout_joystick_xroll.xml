<ActionMaps version="1">
  <CustomisationUIHeader device="joystick" label="@ui_CMJoystickXRoll" description="@ui_CMJoystickXRollDesc" image="JoystickXRoll" />
  <actionmap name="spaceship_movement">
    <action name="v_yaw">
      <rebind device="joystick" input="js1_rotz" />
    </action>
    <action name="v_roll">
      <rebind device="joystick" input="js1_x" />
    </action>
    <action name="v_decoupled_yaw">
      <rebind device="joystick" input="js1_rotz" />
    </action>
    <action name="v_decoupled_roll">
      <rebind device="joystick" input="js1_x" />
    </action>
  </actionmap>
</ActionMaps>